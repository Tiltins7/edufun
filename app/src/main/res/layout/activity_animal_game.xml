<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animal_start_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/dPreview">


    </LinearLayout>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@mipmap/exitgame_round"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:layout_marginTop="90dp"

        android:background="@drawable/rounded_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="270dp"
            android:layout_height="69dp"
            android:gravity="center"
            android:text="@string/animal_game_started_text1"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:fontFamily="@font/peace_sans" />

        <TextView

            android:id="@+id/randVal"
            android:layout_width="265dp"
            android:layout_height="75dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            app:fontFamily="@font/peace_sans"
            android:text="@string/animal_game_started_text2"
            android:textColor="#FFFFFF"
            android:textSize="60sp" />


    </FrameLayout>

    <Button
        android:id="@+id/btn_scan_me"


        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="@string/animal_game_started_text3"
        android:background="@drawable/rounded_button"
        app:fontFamily="@font/peace_sans"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:layout_width="270dp"

        android:layout_height="188dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_rectangle"
        app:fontFamily="@font/peace_sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="90dp"
            android:background="@android:color/holo_blue_light"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/animal_game_started_text4"
            android:textColor="#FDFDFD"
            android:textSize="30sp"
            app:fontFamily="@font/peace_sans" />

        <TextView
            android:id="@+id/correctStr"
            android:layout_width="270dp"
            android:layout_height="75dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="@string/animal_game_started_text5"
            android:textColor="#4CAF50"
            android:textSize="30sp"
            android:visibility="invisible"
            app:fontFamily="@font/peace_sans" />

        <TextView
            android:id="@+id/incorrectStr"
            android:layout_width="270dp"
            android:layout_height="75dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="@string/animal_game_started_text6"
            android:textColor="#F44336"
            android:textSize="30sp"
            android:visibility="invisible"
            app:fontFamily="@font/peace_sans" />

        <TextView

            android:id="@+id/et_value"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            app:fontFamily="@font/peace_sans"

            android:textColor="#FFFFFF"
            android:textSize="45sp"
            android:textStyle="bold" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>