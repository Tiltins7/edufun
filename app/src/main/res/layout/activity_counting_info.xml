<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeaa7"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/homebtn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@mipmap/home_round"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAudioInfo3"

        android:layout_width="55dp"
        android:layout_height="55dp"

        android:layout_marginTop="345dp"
        android:layout_marginEnd="230dp"
        android:layout_marginRight="250dp"
        android:background="@mipmap/audio_round"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />

    <FrameLayout
        android:layout_width="304dp"
        android:layout_height="474dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <Button
            android:id="@+id/button3"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="77dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="395dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_button"
            app:fontFamily="@font/peace_sans"
            android:gravity="center"
            android:shadowColor="#00000000"
            android:text="@string/START_colorGame"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="237dp"
            android:layout_height="90dp"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="200dp"
            app:fontFamily="@font/peace_sans"
            android:gravity="center"
            android:text="@string/counting_game_head"
            android:textColor="#FFE683"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="237dp"
            android:layout_height="119dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="200dp"
            app:fontFamily="@font/peace_sans"

            android:text="@string/counting_game_ins"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="237dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="200dp"
            app:fontFamily="@font/peace_sans"
            android:gravity="center"
            android:text="@string/counting_game_ins3"
            android:textColor="#FFEFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="0dp"
            app:fontFamily="@font/peace_sans"
            android:text="@string/counting_game_ins2"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
