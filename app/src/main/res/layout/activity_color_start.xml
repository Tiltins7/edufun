<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeaa7"
    tools:context=".counting_info">




    <Button
        android:id="@+id/btnExitcolor"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@mipmap/exitgame_round"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/framelayout_image"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_rectangle"
        android:visibility="invisible"
        app:fontFamily="@font/peace_sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="276dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/transparent" />

        <Button
            android:id="@+id/btn_image_ok"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:background="@drawable/rounded_button"
            android:text="@string/color_game_ok"
            android:textSize="30sp"
            app:fontFamily="@font/peace_sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_youranswer"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/rounded_rectangle"
        android:visibility="invisible"
        app:fontFamily="@font/peace_sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002">



    <TextView
        android:id="@+id/text_your_answer"
        android:layout_width="300dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:text="@string/color_game_your_answer"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:fontFamily="@font/peace_sans" />

        <TextView

            android:id="@+id/answer_color"
            android:layout_width="190dp"
            android:layout_height="75dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="@string/color_game_answer"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            app:fontFamily="@font/peace_sans" />

        <ImageView
        android:id="@+id/image_color_answ_correct"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
            android:visibility="invisible"
        app:srcCompat="@drawable/checkmark"
        />
        <ImageView
            android:id="@+id/image_color_answ_incorrect"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/red_cross"
            />

    </FrameLayout>
    <FrameLayout
        android:id="@+id/frameLayout_ask_color"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_rectangle"
        android:visibility="visible"
        app:fontFamily="@font/peace_sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002">



        <TextView
            android:id="@+id/textView13"
            android:layout_width="300dp"
            android:layout_height="69dp"
            android:gravity="center"
            android:text="@string/color_game_color_name"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:fontFamily="@font/peace_sans" />

        <TextView

            android:id="@+id/randomColorTW"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="@string/color_game_random_color"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            app:fontFamily="@font/peace_sans" />


    </FrameLayout>

    <Button
        android:id="@+id/btn_take_color"


        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_button"
        android:text="@string/color_game_takephoto"
        android:textSize="30sp"
        app:fontFamily="@font/peace_sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_color_playagain"


        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_button"
        android:text="@string/color_game_playagain"
        android:textSize="30sp"
        app:fontFamily="@font/peace_sans"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>